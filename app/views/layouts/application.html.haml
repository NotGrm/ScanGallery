!!! 5
%html
	%head
		%title ScanGallery
		= stylesheet_link_tag    "application", :media => "all"
		= stylesheet_link_tag    "jquery.plupload.queue", :media => "all"
		
		= include_gon
		= javascript_include_tag "application"
		= javascript_include_tag "plupload"
		= javascript_include_tag "plupload.full"
		= javascript_include_tag "jquery.plupload.queue"
		= csrf_meta_tags

	%body
		.navbar.navbar-fixed-top
			.navbar-inner
				.container
					= link_to "Scan Gallery", root_path, :class => "brand"

					%ul.nav
						%li{:class => current_page?(new_manga_path) ? "active" : ""}= link_to 'New Manga', new_manga_path

		.container-fluid
			.row-fluid
				.span3
					.well{:style => "max-width: 340px; padding: 8px 0;"}
						%ul.nav.nav-list
							%li.nav-header General
							%li{:class => current_page?(root_path) ? "active" : ""}= link_to "Home", root_path

							%li.nav-header Manga List
							- Manga.order(:name).each do |manga|
								%li{:class => @manga && @manga.id == manga.id ? "active" : ""}
									= link_to manga.name, manga_path(manga)

				.span9
					= render 'layouts/messages'
					= yield
