.page-header
	%h1= "#{@chapter.manga_name} #{(@chapter.number)}"

%p#notice= notice

.well
	= link_to 'Add Page', new_manga_chapter_page_path(@manga, @chapter)
	\|
	= link_to 'Edit', edit_manga_chapter_path(@manga, @chapter)
	\|
	= link_to 'Back', manga_path(@manga)

%ul.thumbnails
	- @chapter.pages.each do |page|
		%li.span3
			= link_to image_tag(page.image.url), manga_chapter_page_path(@manga, @chapter, page), :class => "thumbnail" 
