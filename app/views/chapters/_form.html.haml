= simple_form_for [@manga,@chapter], defaults: { input_html: { class: 'form-control' } }, input_html: {class: "form-horizontal"} do |f|
	.form-group
		= f.label :number, class: "col-md-2"
		.col-md-10
			= f.input_field :number, :autofocus => "autofocus", :autocomplete => "off"

	.form-group
		= f.label :team, class: "col-md-2"
		.col-md-10
			= f.input_field :team, :class => "typeahead form-control", autocomplete: "off"

	.form-group
		.col-lg-offset-2.col-lg-10
			= f.button :submit, :class => "btn-primary"
