.row
	.col-md-12
		%h1
			= @manga.name
			.pull-right
				= link_to edit_manga_path(@manga), :class => "btn btn-default" do
					%span.glyphicon.glyphicon-pencil
					Edit
				= link_to @manga, :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-default" do
					%span.glyphicon.glyphicon-trash
					Delete
				= link_to new_manga_chapter_path(@manga), :class => "btn btn-lg btn-primary" do
					Add chapter
					%span.glyphicon.glyphicon-plus
			.clearfix

	.col-md-9.col-sm-9
		%dl
			%dt PrÃ©sentation
			%dd= @manga.presentation

	.col-md-3.col-sm-3
		%dl
			%dt Author
			%dd= @manga.author
			
			%dt Status
			%dd= @manga.status
			
			%dt Genres
			%dd
				%span.label.label-default Shonen
				%span.label.label-default Fantastique
				%span.label.label-default Fantastique

%section

	= render :partial => "chapters/list", :locals => { :chapters => @chapters }