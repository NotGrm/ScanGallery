- content_for :navmenu do
	%ul.nav
		%li.dropdown 
			%a.dropdown-toggle{"data-toggle" => "dropdown"}
				Go to Chapter
				%b.caret
			%ul.dropdown-menu
				- @manga.ordered_chapters.each do |chapter|
					- if chapter.pages.first
						%li= link_to chapter.number, manga_chapter_page_path(@manga, chapter, chapter.pages.first)
		%li.dropdown 
			%a.dropdown-toggle{"data-toggle" => "dropdown"}
				Go to Page
				%b.caret
			%ul.dropdown-menu
				- @chapter.ordered_pages.each do |p|
					%li= link_to p.number, manga_chapter_page_path(@manga, @chapter, p)

= render 'nav', :page => @page

%div
	= link_to (@page.next_page.nil? ? 'javascript:;' : manga_chapter_page_path(@manga, @chapter, @page.next_page)), :class => "thumbnail" do
		= image_tag @page.image.url

= render 'nav', :page => @page

	
